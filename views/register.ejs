
<% include ./partials/header %>

<div class="container">
  <div id="form-frame" class="row">
    <h1 id="form-header" style="text-align: center;">Register new profile</h1>
    <div class="forms">
      <form action="/register" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="username" placeholder="username">
        </div>
        <div class="form-group">
          <input class="form-control" type="password" name="password" placeholder="password">
        </div>
        <div class="form-group">
           <button class="btn btn-large btn-primary btn-block">Sign up!</button>
        </div>
      </form>
  
      <p class="pull-right"><a href="/login">Already have an account?</a></p>
    </div>
  </div>
</div>
<% include ./partials/footer %>
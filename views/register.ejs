<% include ./partials/header %>
  <div class="container">
    <div class="row text-center">
      <div class="col-md-12">
        <form class="form-sign" action="/register" method="POST">
          <h1 class="text-center">Cadastre-se</h1>
          <div class="form-label-group">
            <label for="inputUsername" class="sr-only">Usuário</label>
            <input id="inputUsername" class="form-control" type="text" name="username" placeholder="usuário">
          </div>
          <div class="form-label-group">
            <label for="inputPassword" class="sr-only">Senha</label>
            <input id="inputPassword" class="form-control" type="password" name="password" placeholder="senha">
          </div>
          <input class="btn btn-large btn-primary btn-block" type="submit" value="Cadastrar!">
        </form>
        <a href="/login">Já possuo uma conta</a>
      </div>
    </div>
  </div>
  <% include ./partials/footer %>
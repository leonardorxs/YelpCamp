<div class="modal fade" id="campgroundModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 style="max-width: inherit" class="modal-title" id="campgroundModalLabel">Excluir o acampamento '<%= ((campground) ? campground.name : "") %>'?</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Voltar</button>
          <form id="campgroundForm" name="campgroundForm" action="/campgrounds/<%= campground._id %>/?_method=DELETE" method="POST">
            <button href="" class="btn btn-danger ml-2">Excluir</button>
          </form>
        </div>
      </div>
    </div>
</div>
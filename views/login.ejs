<% include ./partials/header %>
<% include ./partials/nav %>
  <div class="container">
    <div class="row text-center">
      <div class="col-md-12">
        <form class="form-sign pb-1" action="/login" method="POST">
          <h1 class="text-center">Login</h1>
          <div class="form-label-group">
            <label for="inputUsername" class="sr-only">Usuário</label>
            <input id="inputUsername" class="form-control" type="text" name="username" placeholder="usuario" autofocus>
          </div>
          <div class="form-label-group">
            <label for="inputPassword" class="sr-only">Senha</label>
            <input id="inputPassword" class="form-control" type="password" name="password" placeholder="senha">
          </div>
          <input class="btn btn-large btn-primary btn-block" type="submit" value="Entrar!">
        </form>
        <div class="fb-login-button" data-max-rows="1" data-size="small" 
        data-button-type="continue_with" data-show-faces="false" 
        data-auto-logout-link="false" data-use-continue-as="true"></div>
        <div><a href="/register">Não possuo uma conta</a></div>
      </div>
    </div>
  </div>
  <% include ./partials/footer %>